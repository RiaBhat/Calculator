<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.riabhat.calculator.Adding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/Black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:text="Add a new Formula"
        />
    <EditText
        android:id="@+id/a2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/a1"
        android:layout_marginTop="20dp"
        android:textColor="@color/Black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:hint="Name of Formula"
        />
    <EditText
        android:id="@+id/a3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/a2"
        android:layout_marginTop="20dp"
        android:textColor="@color/Black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:hint="Body of Formula"
        />
        <Button
            android:id="@+id/a4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/a3"
            android:layout_alignParentRight="true"
            android:textColor="@color/Black"
            android:text="add"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/Black"
            android:layout_below="@id/a4"
            android:textSize="40dp"
            android:textAlignment="center"
            android:text="Delete a Formula"
            />
        <EditText
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/b1"
            android:layout_marginTop="20dp"
            android:textColor="@color/Black"
            android:textSize="30dp"
            android:textAlignment="center"
            android:hint="Name of Formula"
            />
        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/b2"
            android:layout_alignParentRight="true"
            android:textColor="@color/Black"
            android:text="delete"
            android:textSize="20dp"
            />
    </RelativeLayout>
</ScrollView>
